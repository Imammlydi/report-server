<!-- Modal -->
<div class="modal fade" id="edit-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Update Inspector</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <form action="/admin/engineer?_method=PUT" method="POST" 
        
            >
                  <div class="form-group">
                    <label for="exampleInputEmail1">Name of Engineer</label>
                    <input type="text" class="form-control name"  name="name"  placeholder="Enter Name of Inspector" required="true">
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Field</label>
                    <input type="text" class="form-control field" name="field"  placeholder="Enter  Field" required="true">
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Position</label>
                    <input type="text" class="form-control position"  name="position"  placeholder="Enter Position" required="true">
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Image</label>
                    <input type="file" class="form-control"  name="image"   >
                  <span>Pilih Gambar untuk Update image</span>
                  </div>
                <div class="modal-footer">
                    <input type="text" class="id" name="id" >
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-primary">Update</button>
                </div>
              </form>
        </div>
      </div>
    </div>
  </div>