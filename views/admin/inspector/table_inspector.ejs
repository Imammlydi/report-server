<div class="card shadow mb-4">
    <div class="card-header py-3">
      <button 
        type="button" 
        class="btn btn-primary" 
        data-toggle="modal" 
        id="addModal"
        data-target="#add-modal"
        >
        <i class="fas fa-plus"></i>
       </button>
      <!-- <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6> -->
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>No</th>
              <th>Name</th>
              <th>Field</th>
              <th>Position</th>
              <th>Engineer</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i=0; i < inspector.length; i++){ %>
              <tr>
                <td><%= i+1  %></td>
                <td><%= inspector[i].name  %></td>
                <td><%= inspector[i].field  %></td>
                <td><%= inspector[i].position  %></td>
               
                
                <td>
                  <%= inspector[i].engineers.name  %>
                </td>
                <td>
                  <form action="/admin/inspector/<%= inspector[i].id %>?_method=DELETE" method="POST">
                  <a 
                    href="javascript:void()" 
                    type="button" 
                    class="btn btn-warning btn-circle btn-sm button-update" 
                    data-id="<%= inspector[i].id %>" 
                    data-name="<%= inspector[i].name %>"
                    data-position="<%= inspector[i].position %>"
                    data-field="<%= inspector[i].field %>"
                    >
                      <i class="fas fa-edit"></i></a>
                  <button type="submit" class="btn btn-danger btn-circle btn-sm "><i class="fas fa-trash"></i></button>
                </form>
                </td>
              </tr>
            <%  } %>  
          </tbody>
        </table>
      </div>
    </div>
  </div>