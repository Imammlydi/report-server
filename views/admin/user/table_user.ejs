<div class="card shadow mb-4">
    <div class="card-header py-3">
      <button 
        type="button" 
        class="btn btn-primary" 
        data-toggle="modal" 
        id="addModal"
        data-target="#add-modal"
        >
        <i class="fas fa-plus"></i>
       </button>
      <!-- <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6> -->
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>No</th>
              <th>Name</th>
              <th>Email</th>
              <th>role</th>
              
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i=0; i < users.length; i++){ %>
              <tr>
                <td><%= i+1  %></td>
                <td><%= users[i].name  %></td>
                <td><%= users[i].email  %></td>
                
                <td>
                  <a href="/admin/user/<%= users[i].id %>" class="btn btn-success btn-circle btn-sm ">
                    <i class="fas fa-eye"></i>
                  </a>
                </td>
                
               
                <td>
                  <form action="/admin/user/<%= users[i].id %>?_method=DELETE" method="POST">
                  <a 
                    href="javascript:void()" 
                    type="button" 
                    class="btn btn-warning btn-circle btn-sm button-update" 
                    data-id="<%= users[i].id %>" 
                    data-name="<%= users[i].name %>"
                    data-email="<%= users[i].email %>"
                    data-password="<%= users[i].password %>"
                    >
                   
                      <i class="fas fa-edit"></i></a>
                  <button type="submit" class="btn btn-danger btn-circle btn-sm "><i class="fas fa-trash"></i></button>
                </form>
                </td>
              </tr>
            <%  } %>  
          </tbody>
        </table>
      </div>
    </div>
  </div>