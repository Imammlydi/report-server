<div class="card shadow mb-4">
    <div class="card-header py-3">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add-modal">
        <i class="fas fa-plus"></i>
       </button>
      <!-- <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6> -->
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>No</th>
              <th>title</th>
              <th>description</th>
              <th>shift</th>
              <th>Date</th>
              <th>Detail</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i=0; i < report.length; i++){ %>
              <tr>
                <td><%= i+1  %></td>
                <td><%= report[i].title  %></td>
                <td><%= report[i].description  %></td>
                <td><%= report[i].shift  %></td>
                <td><%= report[i].tanggal  %></td>
                <td>
                  <a href="/admin/report/<%= report[i].id %>" class="btn btn-success btn-circle btn-sm ">
                    <i class="fas fa-eye"></i>
                  </a>
                </td>
                <td>
                  <form action="/admin/report/<%= report[i].id %>?_method=DELETE" method="POST">
                  <a 
                    href="javascript:void()" 
                    type="button" 
                    class="btn btn-warning btn-circle btn-sm button-update" 
                    data-id="<%= report[i].id %>" 
                    data-name="<%= report[i].name %>"
                    data-namePosition="<%= report[i].position %>"
                    data-nomerField="<%= report[i].field %>"
                    >
                      <i class="fas fa-edit"></i></a>
                  <button type="submit" class="btn btn-danger btn-circle btn-sm "><i class="fas fa-trash"></i></button>
                </form>
                </td>
              </tr>
            <%  } %>  
          </tbody>
        </table>
      </div>
    </div>
  </div>